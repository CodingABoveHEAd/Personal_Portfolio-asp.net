@model Personal_Portfolio2.Models.Project
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Project";
}


@section Styles {
    <link href="~/Content/Create.css" rel="stylesheet" />
}

<div class="edit-project-container">

    <div class="edit-project-header">
        <h2>Create Project</h2>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-container">

            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

            @Html.EditorForModel()

        </div>

        <div class="button-section">
            <button type="submit" class="btn-success">Create Project</button>
            @Html.ActionLink("Cancel", "Projects", "Admin", null, new { @class = "btn-link" })
        </div>
    }

</div>