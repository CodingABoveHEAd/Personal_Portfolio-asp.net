@model Personal_Portfolio2.Models.Project
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Project";
}
@section Styles {
    <link href="~/Content/Delete.css" rel="stylesheet" />
}

<div class="delete-container">
    <h2>Delete Project</h2>
    <h4>Are you sure you want to delete this project?</h4>

    <div class="project-info">
        <dt>Title</dt>
        <dd>@Model.Title</dd>
    </div>

    <div class="action-buttons">
        @using (Html.BeginForm("Delete", "Projects", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <input type="submit" value="Delete Project" class="btn-delete" />
            @Html.ActionLink("Cancel", "Projects", "Admin", null, new { @class = "btn-cancel" })
        }
    </div>
</div>