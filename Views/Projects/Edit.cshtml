@model Personal_Portfolio2.Models.Project
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Project";
}
@section Styles {
    <link href="~/Content/Edit.css" rel="stylesheet" />
}

<div class="edit-project-container">
    <div class="edit-project-header">
        <h2>Edit Project</h2>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-container">
            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
            @Html.HiddenFor(m => m.Id)

            <div class="editor-field">
                @Html.LabelFor(m => m.Title, new { @class = "editor-label" })
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "field-validation-error" })
            </div>

            <div class="editor-field">
                @Html.LabelFor(m => m.Description, new { @class = "editor-label" })
                @Html.TextAreaFor(m => m.Description)
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "field-validation-error" })
            </div>

            <div class="editor-field">
                @Html.LabelFor(m => m.Url, new { @class = "editor-label" })
                @Html.TextBoxFor(m => m.Url)
                @Html.ValidationMessageFor(m => m.Url, "", new { @class = "field-validation-error" })
            </div>

            <div class="editor-field">
                @Html.LabelFor(m => m.Tags, new { @class = "editor-label" })
                @Html.TextBoxFor(m => m.Tags)
                @Html.ValidationMessageFor(m => m.Tags, "", new { @class = "field-validation-error" })
            </div>
        </div>

        <div class="button-section">
            <button type="submit" class="btn-primary">Update Project</button>
            @Html.ActionLink("Cancel", "Projects", "Admin", null, new { @class = "btn-link" })
        </div>
    }
</div>