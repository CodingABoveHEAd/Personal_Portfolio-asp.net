<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Personal Portfolio</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Floating particles -->
    <div class="floating-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <!-- Navbar -->
    <header>
        <nav>
            <ul class="navbar">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Education", "Index", "Education")</li>
                <li>@Html.ActionLink("Skills", "Index", "Skills")</li>
                <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
            </ul>
        </nav>
    </header>

    <!-- Main content -->
    <div class="container">
        <div class="minimal-accent"></div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year - Niloy Chowdhury Portfolio</p>
    </footer>
</body>
</html>